# =================================
# STARGATE PORTAL - ENVIRONMENT VARIABLES
# =================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ---------------------------------
# Server Configuration
# ---------------------------------
NODE_ENV=development
PORT=5000
HOST=localhost
FRONTEND_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# ---------------------------------
# Database
# ---------------------------------
# PostgreSQL connection string (Neon, Railway, Supabase, or local)
# REQUIRED for production - server can run without DB in dev mode
DATABASE_URL=postgresql://user:password@localhost:5432/stargate_portal?schema=public

# ---------------------------------
# Security & Authentication
# ---------------------------------
# REQUIRED IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=stargate-portal-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this-in-production

# ---------------------------------
# AI Model API Keys
# ---------------------------------
# OpenAI (GPT-4, GPT-4o, DALL-E) - HIGHLY RECOMMENDED
OPENAI_API_KEY=sk-your-openai-api-key-here
# Optional: Use custom OpenAI-compatible endpoint
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key-here
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic (Claude 3.5 Sonnet) - HIGHLY RECOMMENDED
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini (Gemini 2.0) - RECOMMENDED
GEMINI_API_KEY=your-google-gemini-api-key-here
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here
# Legacy name for backwards compatibility
GOOGLE_GENAI_API_KEY=your-google-genai-api-key-here

# xAI (Grok - Optional)
XAI_API_KEY=xai-your-xai-api-key-here

# Replicate (for image generation models) - RECOMMENDED
REPLICATE_API_TOKEN=r8_your-replicate-token-here

# Leonardo AI (image generation) - RECOMMENDED
LEONARDO_AI_API_KEY=your-leonardo-ai-api-key-here

# Mock AI for testing (set to "true" to skip real API calls)
USE_MOCK_AI=false

# ---------------------------------
# Image & Content APIs
# ---------------------------------
# Unsplash (free stock photos) - RECOMMENDED
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
UNSPLASH_SECRET_KEY=your-unsplash-secret-key-here

# Pexels (free stock photos - alternative)
PEXELS_API_KEY=your-pexels-api-key-here

# Google Search API (for web research and competitor analysis)
GOOGLE_SEARCH_API_KEY=your-google-custom-search-api-key-here
GOOGLE_SEARCH_ENGINE_ID=your-google-search-engine-id-here

# SEMrush (SEO analytics - optional)
SEMRUSH_API_KEY=your-semrush-api-key-here

# ---------------------------------
# Email Services
# ---------------------------------
# SendGrid (email marketing)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Stargate Portal

# Mailchimp (email marketing - alternative)
MAILCHIMP_API_KEY=your-mailchimp-api-key-here
MAILCHIMP_SERVER=us1
MAILCHIMP_LIST_ID=your-mailchimp-list-id-here

# ---------------------------------
# Payment Processing
# ---------------------------------
# Stripe (payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# Client-side Stripe key (exposed to frontend via Vite)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# ---------------------------------
# Deployment Platforms
# ---------------------------------
# Vercel (deployment)
VERCEL_API_TOKEN=your-vercel-api-token-here
VERCEL_TOKEN=your-vercel-token-here

# Netlify (deployment - alternative)
NETLIFY_API_TOKEN=your-netlify-api-token-here

# ---------------------------------
# Frontend Build Variables (Vite)
# ---------------------------------
# These are exposed to the client-side code (must start with VITE_)
VITE_API_URL=http://localhost:5000
VITE_SOCKET_URL=ws://localhost:5000

# ---------------------------------
# Legacy/Compatibility (Optional)
# ---------------------------------
CORS_ORIGIN=http://localhost:5000

# ---------------------------------
# Optional: Development Tools
# ---------------------------------
# Sentry (error tracking - optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# DataDog (monitoring - optional)
# DATADOG_API_KEY=your-datadog-api-key-here

# ---------------------------------
# Feature Flags (Optional)
# ---------------------------------
# ENABLE_AI_ASSISTANT=true
# ENABLE_VOICE_INTERFACE=false
# ENABLE_VIDEO_GENERATION=false
# ENABLE_WHITE_LABEL=false

# =================================
